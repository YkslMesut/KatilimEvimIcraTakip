<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.AddCostFragment">

    <EditText
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textColor="@color/text_color"
        android:hint="Lütfen Masraf Tipinizi Giriniz"
        android:id="@+id/etCostName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Lütfen Masraf Miktarını Giriniz"
        android:inputType="number"
        android:textColor="@color/text_color"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:id="@+id/etAmountOfExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarih :"
            android:textColor="@color/text_color"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:fontFamily="sans-serif-black"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/btnPickDate"
            android:padding="10dp"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:visibility="visible">
            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/bg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:padding="10dp"
                    android:fontFamily="sans-serif-black"
                    android:maxLines="2"
                    android:gravity="center"
                    android:text="Tarih Seçmek için Tıklayınız"
                    android:id="@+id/txtDate"
                    android:textColor="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxIsAdvanceFee"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:text="Masraf Tipi Peşin Harcı ise Lütfen İşaretleyiniz."
        android:textColor="@color/text_color"
        android:fontFamily="sans-serif-black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/checkBoxIsProtestCost"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:text="İhtarname Masrafı ise Lütfen İşaretleyiniz."
        android:textColor="@color/text_color"
        android:fontFamily="sans-serif-black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="50dp"
        android:id="@+id/btnAddCosts"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:background="@drawable/bg2"
        android:text="Masraf Ekle"
        android:textColor="@color/text_color"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>

