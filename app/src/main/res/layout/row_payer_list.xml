<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/btnPickDate"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp"
        android:visibility="visible">
        <LinearLayout
            android:background="@drawable/bg2"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="sans-serif-black"
                    android:textSize="15dp"
                    android:textColor="@color/text_color"
                    android:text="İsim Soyisim : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtName"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_color"
                    android:fontFamily="sans-serif-black"
                    android:textSize="15dp"
                    android:text="ali osman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="4dp"
                    android:id="@+id/txtSurname"
                    android:textColor="@color/text_color"
                    android:fontFamily="sans-serif-black"
                    android:textSize="15dp"
                    android:text="yüksel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="sans-serif-black"
                    android:textSize="15dp"
                    android:textColor="@color/text_color"
                    android:text="Dosya Numarası: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtDocumentId"
                    android:layout_marginStart="4dp"
                    android:fontFamily="sans-serif-black"
                    android:textSize="15dp"
                    android:textColor="@color/text_color"
                    android:text="2021/12313"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="sans-serif-black"
                    android:textSize="15dp"
                    android:textColor="@color/text_color"
                    android:text="Dosya Tipi :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtDocumentType"
                    android:fontFamily="sans-serif-black"
                    android:textSize="15dp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_color"
                    android:text="katılımevimicra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>






    <TextView
        android:id="@+id/containerUuid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>