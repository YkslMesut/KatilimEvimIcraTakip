<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    android:layout_height="match_parent"
    tools:context=".view.CostCalculateFragment">

    <LinearLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarih :"
            android:textColor="@color/text_color"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:fontFamily="sans-serif-black"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/btnPickDate"
            android:padding="10dp"
            android:layout_marginStart="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/card_color"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:visibility="visible">
            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/bg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:padding="10dp"
                    android:textColor="@color/text_color"
                    android:fontFamily="sans-serif-black"
                    android:maxLines="2"
                    android:gravity="center"
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewCalculated"
        android:visibility="gone"
         android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                android:text="Katılım evine gönderilicek Ana Borç"/>
            <TextView
                android:id="@+id/txtKatilimMainDebt"
                android:textSize="15dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                android:text="Katılım evine gönderilicek Faiz"/>
            <TextView
                android:id="@+id/txtKatilimInterest"
                android:textSize="15dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                android:text="Katılım evine gönderilicek Masraf"/>
            <TextView
                android:id="@+id/txtKatilimCost"
                android:textSize="15dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                android:text="Katılım evine gönderilicek Toplam Borç"/>
            <TextView
                android:id="@+id/txtKatilimTotalDebt"
                android:textSize="15dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:fontFamily="sans-serif-black"
                android:textSize="15dp"
                android:text="Borçlıya gönderilicek Toplam Borç"/>
            <TextView
                android:id="@+id/txtTotalDept"
                android:textSize="15dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>