<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baby_purple"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.CostsDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:textSize="15dp"
            android:textColor="@color/text_color"
            android:text="Masraf Tipi :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_margin="10dp"
            android:textColor="@color/text_color"
            android:fontFamily="sans-serif-black"
            android:textSize="15dp"
            android:id="@+id/etCostName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textColor="@color/text_color"
            android:fontFamily="sans-serif-black"
            android:textSize="15dp"
            android:text="Masraf Miktarı :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="number"
            android:fontFamily="sans-serif-black"
            android:textSize="15dp"
            android:textColor="@color/text_color"
            android:layout_margin="10dp"
            android:id="@+id/etAmountOfExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



    <LinearLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarih :"
            android:textColor="@color/text_color"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:fontFamily="sans-serif-black"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/btnPickDate"
            android:padding="10dp"
            android:layout_marginStart="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/card_color"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:visibility="visible">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:padding="10dp"
                    android:textColor="@color/text_color"
                    android:fontFamily="sans-serif-black"
                    android:maxLines="2"
                    android:gravity="center"
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:layout_margin="50dp"
        android:id="@+id/btnUpdateCost"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textColor="@color/text_color"
        android:backgroundTint="@color/card_color"
        android:text="Güncelle"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>